<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.example.checkpoint1">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Checkpoint1">
        <activity
            android:name=".TelaCalculadora"
            android:parentActivityName=".MainActivity"></activity>
        <activity
            android:name=".tela_conta_telefonica_resultado"
            android:parentActivityName=".tela_conta_telefonica" />
        <activity
            android:name=".tela_conta_telefonica"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>